{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": false,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "alwaysStrict": true,
    "outDir": "dist"
  },
  "include": [
    "*.ts"
  ]
}
